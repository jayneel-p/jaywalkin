---
import "../styles/test.css";
import Navbar from "../components/Navbar.astro";

// Get the title from props with a default value
const { title = "jaywalkin'" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{title}</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.4/dist/katex.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.4/dist/contrib/auto-render.min.css">
  <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.4/dist/katex.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/katex@0.16.4/dist/contrib/auto-render.min.js"
    onload="renderMathInElement(document.body, { delimiters: [{left: '$$', right: '$$', display: true}, {left: '$', right: '$', display: false}] })"></script>
</head>
<body>
  <header class="header">
    <div class="header-top">
      <div class="title-wrapper">
        <a href="/" class="site-title">jaywalkin'</a>
      </div>
      <Navbar />
    </div>
    <h2 class="subheader">put some pithy quote here</h2>
  </header>
  <main>
    <slot />
  </main>
</body>
</html>