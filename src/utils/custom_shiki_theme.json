{
  "$schema": "https://raw.githubusercontent.com/shikijs/tm-themes/master/schema.json",
  "name": "jaywalkin-retro-theme",
  "type": "dark",
  "colors": {
    "editor.background": "#2E2E2E",
    "editor.foreground": "#FAF0E6"
  },
  "tokenColors": [
    {
      "scope": "comment",
      "settings": { "foreground": "#A0522D", "fontStyle": "italic" }
    },
    {
      "scope": ["keyword", "keyword.control", "keyword.other", "storage.type", "storage.modifier"],
      "settings": { "foreground": "#E6B800" }
    },
    {
      "scope": "string",
      "settings": { "foreground": "#FF6347" }
    },
    {
      "scope": ["variable", "variable.other", "variable.parameter"],
      "settings": { "foreground": "#228B22" }
    },
    {
      "scope": "constant",
      "settings": { "foreground": "#4169E1" }
    },
    {
      "scope": "function",
      "settings": { "foreground": "#D2691E" }
    },
    {
      "scope": "type",
      "settings": { "foreground": "#B22222" }
    },
    {
      "scope": "number",
      "settings": { "foreground": "#6495ED" }
    },
    {
      "scope": "operator",
      "settings": { "foreground": "#A0522D" }
    },
    {
      "scope": "punctuation",
      "settings": { "foreground": "#A6A6A6" }
    }
  ]
}