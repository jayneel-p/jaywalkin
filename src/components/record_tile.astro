---
// RecordTile.astro
interface Props {
  record: {
    id: string;
    artist: string;
    title: string;
    year: number;
    rating: number | null;
    coverUrl: string;
    genres: string[];
    personalNote?: string;
  };
}
const { record } = Astro.props;
// Determine tile size based on rating
function getTileSize(rating: number | null): string {
  if (!rating) return 'medium';           // unrated default
  if (rating === 5) return 'large';       
  if (rating === 4) return 'medium';      
  if (rating === 3) return 'small';       
  if (rating <= 2) return 'tiny';        
  return 'medium';
}

const sizeClass = getTileSize(record.rating);

// Generate star rating display
function getStarRating(rating: number | null): string {
  if (!rating) return '';
  return '★'.repeat(rating) + '☆'.repeat(5 - rating);
}
const starDisplay = getStarRating(record.rating);
---

<div class={`record-tile record-tile--${sizeClass}`}>
  <div class="record-cover">
    <img 
      src={record.coverUrl} 
      alt={`${record.artist} - ${record.title}`}
      loading="lazy"
    />
    <div class="record-overlay">
      <div class="record-info">
        <h3 class="record-title">{record.title}</h3>
        <p class="record-artist">{record.artist}</p>
        <p class="record-year">{record.year}</p>
        {record.rating && (
          <div class="record-rating">
            <span class="stars">{starDisplay}</span>
          </div>
        )}
        {record.personalNote && (
          <p class="record-note">{record.personalNote}</p>
        )}
      </div>
    </div>
  </div>
</div>

<style>
  .record-tile {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    cursor: pointer;
  }

  .record-tile:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
  }

  /* Size classes using viewport units with min/max constraints */
  .record-tile--large {
    width: 28vw;
    height: 28vw;
    min-width: 180px;
    min-height: 180px;
    max-width: 280px;
    max-height: 280px;
  }

  .record-tile--medium {
    width: 24vw;
    height: 24vw;
    min-width: 140px;
    min-height: 140px;
    max-width: 220px;
    max-height: 220px;
  }

  .record-tile--small {
    width: 18vw;
    height: 18vw;
    min-width: 120px;
    min-height: 120px;
    max-width: 180px;
    max-height: 180px;
  }

  .record-tile--tiny {
    width: 14vw;
    height: 14vw;
    min-width: 100px;
    min-height: 100px;
    max-width: 140px;
    max-height: 140px;
  }

  .record-cover {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .record-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .record-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.7) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: flex-end;
    padding: 1rem;
  }

  .record-tile:hover .record-overlay {
    opacity: 1;
  }

  .record-info {
    color: var(--colour-text);
    width: 100%;
  }

  .record-title {
    font-size: 0.9rem;
    font-weight: bold;
    margin: 0 0 0.25rem 0;
    line-height: 1.2;
  }

  .record-artist {
    font-size: 0.8rem;
    color: var(--colour-text-muted);
    margin: 0 0 0.25rem 0;
  }

  .record-year {
    font-size: 0.7rem;
    color: var(--colour-text-muted);
    margin: 0 0 0.5rem 0;
  }

  .record-rating {
    margin: 0.25rem 0;
  }

  .stars {
    color: var(--colour-tag1);
    font-size: 0.8rem;
  }

  .record-note {
    font-size: 0.7rem;
    font-style: italic;
    color: var(--colour-text-muted);
    margin: 0.25rem 0 0 0;
    line-height: 1.3;
  }

  /* Mobile responsive adjustments */
  @media (max-width: 768px) {
    .record-tile--large {
      width: 40vw;
      height: 40vw;
      max-width: 200px;
      max-height: 200px;
    }

    .record-tile--medium {
      width: 35vw;
      height: 35vw;
      max-width: 180px;
      max-height: 180px;
    }

    .record-tile--small {
      width: 28vw;
      height: 28vw;
      max-width: 150px;
      max-height: 150px;
    }

    .record-tile--tiny {
      width: 22vw;
      height: 22vw;
      max-width: 120px;
      max-height: 120px;
    }
  }

  @media (max-width: 480px) {
    .record-tile--large {
      width: 45vw;
      height: 45vw;
    }

    .record-tile--medium {
      width: 40vw;
      height: 40vw;
    }

    .record-tile--small {
      width: 32vw;
      height: 32vw;
    }

    .record-tile--tiny {
      width: 28vw;
      height: 28vw;
    }

    .record-overlay {
      padding: 0.5rem;
    }

    .record-title {
      font-size: 0.8rem;
    }

    .record-artist, .record-year {
      font-size: 0.7rem;
    }

    .record-note {
      font-size: 0.65rem;
    }
  }
</style>