---
import BaseLayout from '../../layouts/BaseLayout.astro';

interface Frontmatter {
  title: string;
  date: string;
  description: string;
  tags?: string[];
}

interface Post {
  url: string;
  frontmatter: Frontmatter;
}

const allPosts: Post[] = Object.values(
  import.meta.glob<Post>('/src/pages/articles/*.md', { eager: true })
);

const colorVars = [
  '--accent-yellow',
  '--accent-red',
  '--accent-green',
  '--highlight-purple',
  '--highlight-pink',
  '--highlight-salmon',
  '--highlight-dandelion',
  '--highlight-blue',
  '--highlight-olive',
];

// Get a consistent tag order to assign colors
const allTags: string[] = [...new Set(allPosts.flatMap((p) => p.frontmatter.tags || []))];
---

<BaseLayout>
  <section>
    <div class="tags-top">
      {allTags.map((tag, i) => (
        <a class="tag-inline" href={`/tags/${tag}`} style={`color: var(${colorVars[i % colorVars.length]});`}>
          {tag}
        </a>
      ))}
    </div>

    <ul class="article-list">
      {allPosts.map((post, i) => {
        const { title, description, date, tags = [] } = post.frontmatter;
        const firstTag = tags[0];
        const tagIndex = allTags.indexOf(firstTag);
        const color = tagIndex >= 0 ? `var(${colorVars[tagIndex % colorVars.length]})` : 'var(--highlight-olive)';

        return (
          <li class="article-item">
            <div class="article-header">
              <a class="article-link" href={post.url} style={`border-bottom: 3px solid ${color};`}>
                {title}
              </a>
              <span class="article-date">{date}</span>
            </div>
            <p class="article-desc">{description}</p>
            <div class="tag-list">
              {tags.map((tag) => {
                const i = allTags.indexOf(tag);
                return (
                  <a class="tag-inline" href={`/tags/${tag}`} style={`color: var(${colorVars[i % colorVars.length]});`}>
                    {tag}
                  </a>
                );
              })}
            </div>
          </li>
        );
      })}
    </ul>
  </section>
</BaseLayout>